<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="15dp"
                android:text="身份证照"
                android:textColor="#FF8833" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFF8833" />
        </LinearLayout>

        <com.loopj.android.image.SmartImageView
            android:id="@+id/whcard_pic"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_whcard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="15dp"
                android:text="基本信息"
                android:textColor="#FF8833" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFF8833" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_whcard_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="武汉名片编号"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_whcard_id"
                android:text="WH2015001"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="姓名"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="张三"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="男"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="身份证号"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_card"
                android:paddingLeft="5dp"
                android:text="422202187308624338"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="地址"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="武汉光谷"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="联系电话"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="13846275346"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="民族"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="汉"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_yes"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="出生地"
                android:textColor="#474747"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/whcard_naplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="广东深圳"
                android:textColor="#696969"
                android:textSize="14sp" />
        </RelativeLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="15dp"
            android:text="操作"
            android:textColor="#FF8833" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFF8833" />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

        <Button
            android:id="@+id/whcard_auth_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:text="同意认证"
            android:background="@drawable/buttonstyle_sure" />

        <Button
            android:id="@+id/whcard_auth_disagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="42dp"
            android:text="不同意" 
            android:background="@drawable/buttonstyle_sure"/>
            
    </RelativeLayout>
    </LinearLayout>

    

</ScrollView>