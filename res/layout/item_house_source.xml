<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/room1"   >
        <com.loopj.android.image.SmartImageView
            android:id="@+id/house_item_img"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/rent_house_source" />

        <TextView
            android:id="@+id/house_item_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_below="@+id/house_item_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/house_item_img"
            android:text="鲁巷-吴家湾大厦租房"
            android:textColor="#A9A9A9"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/house_item_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@+id/house_item_add"
            android:layout_below="@+id/house_item_add"
            android:text="1500"
            android:textColor="#f00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/house_item_rental"
            android:layout_toRightOf="@+id/house_item_rental"
            android:textColor="#A9A9A9"
            android:textSize="15sp"
            android:text="元/月" />

        <TextView
            android:id="@+id/house_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/house_item_img"
            android:text="[单间] [整租] [家电齐全]"
            android:textColor="#3d3"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>